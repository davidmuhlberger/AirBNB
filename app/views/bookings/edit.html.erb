<div class="container">
  <div class="row">
    <div class="col-xs-2"></div>
    <div class="col-xs-8">
<h1>Edit booking</h1>

<%= simple_form_for(@booking, url: user_booking_path(@booking)) do |f| %>
  <%= f.error_notification %>

  <%= f.input :guests, label: "Number of guests" %>
  <%= f.input :check_in, as: :string, :input_html => { :data => {:provide => :datepicker, 'date-format': "dd/mm/yyyy"} } %>
  <%= f.input :check_out, as: :string, :input_html => { :data => {:provide => :datepicker, 'date-format': "dd/mm/yyyy"} } %>
  <%= f.input :message %>
  <p><%= f.button :submit %></p>
<% end %>
  <p><%= link_to "Cancel your booking", booking_cancel_user_path(@booking), class: "btn btn-danger" %></p>
  </div>
  <div class="col-xs-2"></div>
</div>
</div>


