<div class="text-center">
  <h1>Your search results</h1>
</div>
<br>
<br>
<br>
<div class="container bg-darker-grey">
  <div class="row">
    <% @flats.each do |flat| %>
        <div class="col-xs-12 col-lg-6">
          <div class="row">
            <div class="col-xs-1"></div>
            <div class="col-xs-10 white-card-250">
          <div class="col-xs-6 text-center">
            <%= image_tag flat.picture.url(:thumb) %>
          </div>
          <div class="col-xs-6 text-center">
            <h4><%=link_to flat.title, flat_path(flat) %></h4>
            <br>
            <p><%= "Night price: #{flat.night_price} â‚¬" %></p>
            <p><%= "Capacity: #{flat.capacity} people" %></p>
            <p><%= "Owner: #{flat.user.first_name} #{flat.user.last_name}" %></p>
          </div>
        </div>
        <div class="col-xs-1"></div>
        </div>
        </div>
    <% end %>
<br>
</div>
</div>
<br>
<br>
<br>
<br>
<br>
<div id="map" style="width: 100%; height: 600px;"></div>

<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    $(document).on('ready', function() {
      handler = Gmaps.build('Google');
      handler.buildMap({ internal: { id: 'map' } }, function(){
        markers = handler.addMarkers(<%= raw @markers.to_json %>);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
        handler.getMap().setZoom(14);
      });
    })
  <% end %>
<% end %>

