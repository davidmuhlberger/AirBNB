<h1>Create a new flat</h1>

<%= simple_form_for(@flat, html: { multipart: true }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :address_numberstreet %>
  <%= f.input :address_zip %>
  <%= f.input :address_city %>
  <%= f.input :address_state %>
  <%= f.input :address_country %>
  <%= f.input :night_price, label: "price per night in euro" %>

  <%= f.button :submit %>
<% end %>
